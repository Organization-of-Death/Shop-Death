<p style="color: green"><%= notice %></p>

<h1>All Items</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Enable</th>
            <th>Picture</th>
            <!-- <th>Sell Now!</th> -->
        </tr>
    </thead>
    <tbody>
        <% if @items.size == 0 %>
            <tr><td>no items</td></tr>
        <% end %>

        <% @items.each do |item| %>
            <tr>
                <td><%= item.id %></td>
                <td><%= item.name %></td>
                <td><%= item.category %></td>
                <td><%= item.enable %></td>
                <% if item.enable %>
                  <td><%= button_to "Disable", set_enable_path(item_id: item.id, enable: false), method: :post, class: 'btn btn-danger'%></td>
                <% else %>
                  <td><%= button_to "Enable", set_enable_path(item_id: item.id, enable: true), method: :post, class: 'btn btn-success'%></td>
                <% end %>
                <td><%= image_tag rails_blob_path(item.picture, disposition: :attachment) %></td>
                <td><%= link_to "Show", show_item_path(item.id), class: 'btn btn-primary' %></td>
            </tr>
        <% end %>

    </tbody>
</table>
<%= link_to "New item", new_item_path, class: 'btn btn-primary' %>