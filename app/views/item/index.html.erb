<p style="color: green"><%= notice %></p>

<h1>All Items</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Picture</th>
            <!-- <th>Sell Now!</th> -->
        </tr>
    </thead>
    <tbody>
        <% if @items.size == 0 %>
            <tr><td>no items</td></tr>
        <% end %>

        <% @items.each do |item| %>
            <tr>
                <td><%= item.id %></td>
                <td><%= item.name %></td>
                <td><%= item.category %></td>
                <td><%= "IMAGE TAG" %></td>
                <td><%= link_to "Show this item", show_item_path(item.id) %></td>
            </tr>
        <% end %>

    </tbody>
</table>
<%= link_to "New item", new_item_path %>